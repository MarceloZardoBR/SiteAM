@model FiapAM.Models.Noticia

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/LayoutDashAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Noticia</title>
</head>
<body>

    <!-- Page Content -->
    <div class="container">
        <!-- Call to Action Well -->
        <div class="row">
            <div class="col-lg-12">
                <div class="well">

                    <h2>Investidor</h2>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @using (Html.BeginForm("Editar", "Noticia", FormMethod.Post))
                    {
                        <!-- // HIDDEN IDPRODUTO -->
                        <!-- // HIDDEN IDPRODUTO -->
                        @Html.HiddenFor(model => model.Idnoticia)
                        <!-- // HIDDEN IDPRODUTO -->
                        <!-- // HIDDEN IDPRODUTO -->

                    <div class="form-group">
                        @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Texto, new { @class = "form-control", @cols = 100, @rows = 2 })
                        @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "text-danger" })
                    </div>

                        <div class="form-group">

                            @Html.LabelFor(model => model.UrlImagem, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.UrlImagem, new { htmlAttributes = new { @class = "form-control" } })
                        </div>



                        <hr>

                        @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn btn-default btn-lg" })
                        <input type="submit" value="Editar" class="btn btn-primary btn-lg" />

                    }


                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</body>
</html>

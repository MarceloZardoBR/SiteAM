@model FiapAM.Models.Imagem

@{
    ViewBag.Title = "InserirImagem";
    Layout = "~/Views/Shared/LayoutWebAdm.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar</title>
</head>
<body>
    <!-- Page Content -->
    <div class="container">
        <!-- Call to Action Well -->
        <div class="row">
            <div class="col-lg-12">
                <div class="well">
                    <h2>Noticia</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @using (Html.BeginForm("InserirImagem", "Noticia", FormMethod.Post,
                                    new { enctype = "multipart/form-data" }))
                                {

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdImagem, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.IdImagem, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IdImagem, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="mensagem">Rotulo:</label>
                            @Html.TextAreaFor(model => model.Rotulo, new { @class = "form-control", @cols = 100, @rows = 2 })
                            @Html.ValidationMessageFor(model => model.Rotulo, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="mensagem">Selecione a Imagem</label>
                            <input name="arquivo" type="file" value="@Html.ValidationMessageFor(model => model.Caminho, "",
                                                           new { @class = "text-danger" })"/>
                        </div>
                        <hr>

                        @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn btn-default btn-lg" })
                        <input type="submit" value="Enviar" class="btn btn-primary btn-lg" />

}
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</body>
</html>



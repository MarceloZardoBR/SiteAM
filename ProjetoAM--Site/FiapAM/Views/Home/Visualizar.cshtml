@model FiapAM.Models.Noticia

@{
    ViewBag.Title = "Visualizar";
    Layout = "~/Views/Shared/LayoutWebAdm.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Visualizar</title>
</head>
<body>

    <!-- Page Content -->
    <div class="container">
        <!-- Call to Action Well -->
        <div class="row">
            <div class="col-lg-12">
                <div class="well">
                    <h2>Noticia</h2>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label" })
                        @Html.DisplayFor(model => model.Titulo);
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label" })
                        @Html.DisplayFor(model => model.Data);
                    </div>
                    <img class="group list-group-image img-fluid" src="@Html.DisplayFor(model => model.UrlImagem)"
                         style="max-width:400px; max-height:200px;" />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Texto, htmlAttributes: new { @class = "control-label" })
                        @Html.DisplayFor(model => model.Texto)
                    </div>

                    <hr>
                    @Html.ActionLink("Voltar", "Index", new object { }, new { @class = "btn btn-default btn-lg" })

                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</body>
</html>



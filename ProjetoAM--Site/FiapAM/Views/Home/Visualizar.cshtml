@model FiapAM.Models.Noticia

@{
    ViewBag.Title = "Visualizar";
    Layout = "~/Views/Shared/LayoutNoticia.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Visualizar</title>
</head>
<body>

    <!-- Page Content -->
    <div class="container">
        <!-- Call to Action Well -->
        <div class="row">
            <div class="col-lg-12">
                <div class="well">
                    <h2>@Html.DisplayFor(model => model.Titulo)</h2>

                    <div class="form-group">
                        <h6>@Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label" }): @Html.DisplayFor(model => model.Data)</h6>

                    </div>
                    <center>
                        <img class="group list-group-image img-fluid" src="@Html.DisplayFor(model => model.UrlImagem)"
                             style="max-width:780px; max-height:300px;" />
                    </center>
                    <br />
                    <div class="form-group">
                        <p>@Html.DisplayFor(model => model.Texto)</p>
                    </div>

                    <hr>
                    @Html.ActionLink("Voltar", "Index", new object { }, new { @class = "btn btn-default btn-lg" })

                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</body>
</html>



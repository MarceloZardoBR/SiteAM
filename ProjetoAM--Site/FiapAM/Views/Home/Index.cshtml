@using FiapAM.Helper

@model IEnumerable<FiapAM.Models.Noticia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutPortal.cshtml";
}

<div class="container">
<div class="row">
    <div class="col-lg-12 my-3">
        <div class="pull-right">
            
        </div>
    </div>
</div>
<div id="noticias" class="row view-group">
    
    @foreach (var item in Model)
    {
        

        <div class="item col-xs-4 col-lg-4">
            <div class="thumbnail card">
                <div class="img-event">
                    <img src="@Html.DisplayFor(model => item.UrlImagem)"
                         width="348" height="200" />
                </div>
                <div class="caption card-body">
                    <p class="group inner list-group-item-text">
                        @Html.DisplayFor(model => item.Data)
                    </p>
                    <h4 class="group card-title inner list-group-item-heading">
                        @Html.DisplayFor(model => item.Titulo)
                    </h4>

                    <p class="group inner list-group-item-text">

                        @Html.DisplayFor(model => item.Descricao)

                    </p>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <a class="btn btn-success btn-xs" href="/Home/Visualizar/@item.Idnoticia">Visualizar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
</div>
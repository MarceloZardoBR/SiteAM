@model FiapAM.Models.Usuario

@{

    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Administrador</title>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <header class="masthead">
        <div class="row">
            <div class="col-lg-12">
                <div class="well">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        @Html.ValidationSummary()
                    }
                    @TempData["Mensagem"]

                    <h2>Login</h2>

                    <!--Html.begin form enviara caso botao clickado para a pagina indicada no "Primeiro Parametro","Segundo indica o pacote"-->
                    <!--Fazer a pagina de Login sucesso-->
                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="control-label" for="nome">Usuário:</label>
                            @Html.TextBoxFor(model => model.EmailUsuario, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EmailUsuario)
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="email">Senha:</label>
                            @Html.PasswordFor(model => model.SenhaUsuario, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SenhaUsuario)

                        </div>
                        <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                    }



                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </header>
</body>
</html>



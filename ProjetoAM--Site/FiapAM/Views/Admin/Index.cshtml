@model FiapAM.Models.Usuario

@{

    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}





<header class="masthead">
    <div class="row">
          <div class="col-lg-12">
              <div class="well">
                    @if (!ViewData.ModelState.IsValid)
                    {
                    @Html.ValidationSummary()
                    }
                    @TempData["Mensagem"]

                    <br />
                    <br />
                    <br />
                    <br />
                    <br />

                    <h2>Login</h2>

                    <!--Html.begin form enviara caso botao clickado para a pagina indicada no "Primeiro Parametro","Segundo indica o pacote"-->
                    <!--Fazer a pagina de Login sucesso-->
                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
                <div class="form-group">
                    <label class="control-label" for="nome" >Usuário:</label>
                    @Html.TextBoxFor(model => model.EmailUsuario, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EmailUsuario)
                </div>

                <div class="form-group">
                    <label class="control-label" for="email">Senha:</label>
                    @Html.PasswordFor(model => model.SenhaUsuario, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SenhaUsuario)

                </div>
                <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
}



                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </header>



